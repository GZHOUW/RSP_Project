<launch>

<node pkg="map_server" type="map_server" name="map_server" args="$(find turtlebot_planner)/maps/simple_maze.yaml">
    <param name = "frame_id" value="map"/>
</node>
<include file = "$(find gazebo_ros)/launch/empty_world.launch">
    <arg name = "use_sim_time" value = "true"/>
    <arg name = "debug" value = "false"/>
    <arg name = "gui" value = "true"/>
    <arg name="world_name" value = "$(find turtlebot_planner)/maps/simple_maze.world"/>

</include>

<arg name="base" value = "$(optenv TURTLEBOT_BASE kobuki)"/>
<arg name="stacks" value = "$(optenv TURTLEBOT_STACKS hexagons)"/>
<arg name="3d_sensor" value = "$(optenv TURTLEBOT_3D_SENSOR kinect)"/>

<include file = "$(find turtlebot_gazebo)/launch/includes/$(arg base).launch.xml">
    <arg name = "base" value = "$(arg base)"/>
    <arg name = "stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor")/>
</include>

<node pkg="nodelet" type="nodelet" name="nodelet" args="manager"/>

<node pkg="nodelet" type="nodelet" name="laserscan" 
      args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager">

    <param name="scan_height" value = "10"/>
    <param name="output_frame_id" value="/camera_depth_frame"/>
    <param name="range_min" value="0.45"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to ="/scan"/>
</node>

<arg name="rviz_config" value = "$(find turtlebot_planner)/maps/simple_maze.rviz"/>
<node pkg = "rviz" type="rviz" name="rviz" arg="-d $(arg rviz_config)"/>

<include file="$(find turtlebot_planner)/launch/amcl.launch.xml"/>

<include file="$(find turtlebot_planner)/launch/includes/move_base.launch.xml">
    <arg name="custom_param_file" value="$(find turtlebot_planner)/config/planner.yaml"/>
    <arg name="dq" value="2.5"/>
    <arg name = "dq_step" value="1.25"/>
    <arg  name="max_iterations" value="200000"/>
    <arg name="goal_radius" value="1.0"/>
</include>



</launch>